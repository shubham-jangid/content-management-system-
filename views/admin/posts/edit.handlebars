<h1> Edit post</h1>

<form action="/admin/posts/edit/{{post.id}}?_method=put  " method="post">
    {{!-- {{#select}} {{/select}} --}}
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" id="title" placeholder="Enter title" value="{{post.title}}">
    </div>


    <div class="form-group">
        <label for="status"> Status</label>
        <select name="status" id=" status" class="form-control">
            {{!-- {{#select post.status}} --}}
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
            {{!-- {{/select}} --}}
        </select>
    </div>

    <div class="form-group">
        <label for="allowComments">
            <input type="checkbox" id="allowComments" {{#if post.allowComments}} checked="checked" {{/if}} class="form-checkbox "> allowComments
        </label>


    </div>
    <div class="form-group">
        <label for="body"> Body</label>
        <textarea name="body" id="body" cols="30" rows="10" class="form-control" placeholder="Type Description"> {{post.body}}</textarea>

    </div>
    <button type="submit " class="btn btn-primary "> Submit </button>



</form>