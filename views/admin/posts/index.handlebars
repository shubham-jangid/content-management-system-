<h1> all post here</h1>

<table class="table table-bordered ">

    <thead>
        <tr>
            <th>ID</th>
            <th>File</th>
            <th>Title</th>
            <th>Status</th>
            <th>Allow Comments</th>
            <th>Edit</th>
            <th>Delete</th>

        </tr>
    </thead>

    <tbody>
        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td>
                <img src="/uploads/{{file}}" height="50px" alt="image">
            </td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{allowComments}}</td>
            <td>
                <a href="/admin/posts/edit/{{id}}" class="btn btn-info"> Edit</a>
            </td>
            <td>
                <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger"> DElete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>

</table>